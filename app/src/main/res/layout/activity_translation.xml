<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".translation">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tr1"
        android:src="@drawable/yourtranslation"
      android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12pt"
        android:layout_marginBottom="22dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:id="@+id/ic"
        android:src="@drawable/ic"
        android:layout_below="@id/tr1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2pt"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/vcx"
        android:src="@drawable/vcx"
        android:layout_below="@id/ic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2pt"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="480dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/bg"
      android:background="@drawable/cx"
android:paddingStart="40dp"
        android:layout_below="@id/vcx"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7pt"

        />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="190dp"
    android:id="@+id/t1"
    android:src="@drawable/t1"

    android:layout_marginStart="40dp"
   android:layout_alignParentBottom="true"
    android:layout_marginBottom="80dp"
    />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:id="@+id/t2"
        android:layout_toEndOf="@id/t1"
        android:src="@drawable/t2"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:id="@+id/t3"
        android:src="@drawable/t3"
        android:layout_toEndOf="@id/t2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:id="@+id/t4"
        android:layout_toEndOf="@id/t3"
        android:src="@drawable/t4"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        />

</RelativeLayout>